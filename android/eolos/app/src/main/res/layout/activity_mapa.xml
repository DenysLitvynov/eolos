<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.MapaActivity">

    <!-- HEADER CON FLECHA -->
    <include
        android:id="@+id/header_container"
        layout="@layout/header_logoyflecha"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TÍTULO -->
    <TextView
        android:id="@+id/tvTituloMapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mapa"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="@font/rethink_sans"
        android:textColor="@color/azul_profundo"
        android:layout_marginTop="4dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/header_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- SCROLL GENERAL -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_mapa"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloMapa"
        app:layout_constraintBottom_toTopOf="@id/menu_inferior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TARJETA DEL MAPA (VACÍA POR AHORA) -->
            <LinearLayout
                android:id="@+id/mapContainer"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/seccion_1"
                android:clipToOutline="true"
                android:orientation="horizontal" />

            <!-- TARJETA LEYENDA (TODO DENTRO DE LA MISMA CAJA) -->
            <LinearLayout
                android:id="@+id/leyendaContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/seccion_1"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Título leyenda -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rethink_sans"
                    android:text="Leyenda"
                    android:textColor="@color/azul_profundo"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- BUENA -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginEnd="10dp"
                        android:background="#7ED957" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rethink_sans"
                        android:text="Buena"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- MALA -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginEnd="10dp"
                        android:background="#F7D31F" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rethink_sans"
                        android:text="Mala"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- POCO SALUDABLE -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginEnd="10dp"
                        android:background="#E63946" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rethink_sans"
                        android:text="Poco Saludable"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/posicion" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rethink_sans"
                        android:text="Puesto de Bicicletas"
                        android:textColor="@color/negro"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- MENÚ INFERIOR -->
    <include
        android:id="@+id/menu_inferior"
        layout="@layout/menu_navegacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>