<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    tools:context=".activities.IncidenciaActivity">

    <!-- ===== CONTENIDO SCROLLEABLE (tarjeta grande) ===== -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_reporte"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/menu_inferior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TARJETA PRINCIPAL -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_reporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@android:color/white"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="20dp">

                    <!-- Logo éolos -->
                    <TextView
                        android:id="@+id/tv_logo_eolos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="éolos"
                        android:textColor="@color/azul_profundo"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/rethink_sans" />

                    <!-- Título principal -->
                    <TextView
                        android:id="@+id/tv_reportar_incidencia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Reportar Incidencia"
                        android:textColor="@color/azul_profundo"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/rethink_sans" />

                    <!-- Código de la bicicleta -->
                    <TextView
                        android:id="@+id/tv_codigo_bici"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Código de la bicicleta"
                        android:textColor="@color/negro"
                        android:textSize="14sp"
                        android:fontFamily="@font/rethink_sans" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_codigo_bici"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="40dp"
                        app:boxCornerRadiusTopEnd="40dp"
                        app:boxCornerRadiusBottomStart="40dp"
                        app:boxCornerRadiusBottomEnd="40dp"
                        app:boxStrokeColor="@color/azul_grisaceo">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_codigo_bici"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="1234567K"
                            android:singleLine="true"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:textColor="@color/negro"
                            android:fontFamily="@font/rethink_sans" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Título tipo de incidencia -->
                    <TextView
                        android:id="@+id/tv_tipo_incidencia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Tipo de incidencia"
                        android:textColor="@color/negro"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/rethink_sans" />

                    <!-- ===== BLOQUE BICICLETA / ENTORNO ===== -->
                    <LinearLayout
                        android:id="@+id/bloque_bici"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/seccion_1"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bicicleta / entorno"
                            android:textColor="@color/negro"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/rethink_sans" />

                        <RadioGroup
                            android:id="@+id/rg_bici_entorno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/rb_caja_danada"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Caja dañada o abierta"
                                android:textSize="13sp"
                                android:fontFamily="@font/rethink_sans" />

                            <RadioButton
                                android:id="@+id/rb_led_no_enciende"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LED del sensor no enciende"
                                android:textSize="13sp"
                                android:fontFamily="@font/rethink_sans" />

                            <RadioButton
                                android:id="@+id/rb_bici_vandalizada"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bicicleta vandalizada"
                                android:textSize="13sp"
                                android:fontFamily="@font/rethink_sans" />

                            <RadioButton
                                android:id="@+id/rb_caja_floja"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Caja del sensor falta o está floja"
                                android:textSize="13sp"
                                android:fontFamily="@font/rethink_sans" />

                            <RadioButton
                                android:id="@+id/rb_sensor_bloquea_cesta"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sensor bloquea la cesta o está mal colocado"
                                android:textSize="13sp"
                                android:fontFamily="@font/rethink_sans" />

                            <RadioButton
                                android:id="@+id/rb_otro_bici"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Otro"
                                android:textSize="13sp"
                                android:fontFamily="@font/rethink_sans" />
                        </RadioGroup>
                    </LinearLayout>

                    <!-- ===== BLOQUE COMUNICACIÓN / APP ===== -->
                    <LinearLayout
                        android:id="@+id/bloque_app"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/seccion_1"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comunicación / App"
                            android:textColor="@color/negro"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/rethink_sans" />

                        <RadioGroup
                            android:id="@+id/rg_app"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/rb_no_conecta"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No puedo conectar con el sensor"
                                android:textSize="13sp"
                                android:fontFamily="@font/rethink_sans" />

                            <RadioButton
                                android:id="@+id/rb_error_qr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Error al escanear QR"
                                android:textSize="13sp"
                                android:fontFamily="@font/rethink_sans" />

                            <RadioButton
                                android:id="@+id/rb_datos_no_actualizan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Datos no se actualizan"
                                android:textSize="13sp"
                                android:fontFamily="@font/rethink_sans" />

                            <RadioButton
                                android:id="@+id/rb_otro_app"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Otro"
                                android:textSize="13sp"
                                android:fontFamily="@font/rethink_sans" />
                        </RadioGroup>
                    </LinearLayout>

                    <!-- ===== OTRO TIPO ===== -->
                    <TextView
                        android:id="@+id/tv_otro_tipo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Otro tipo"
                        android:textColor="@color/negro"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/rethink_sans" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/seccion_1"
                        android:padding="12dp">

                        <EditText
                            android:id="@+id/et_otro_tipo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:hint="Describe la incidencia..."
                            android:gravity="top|start"
                            android:inputType="textMultiLine"
                            android:maxLines="6"
                            android:textColor="@color/negro"
                            android:fontFamily="@font/rethink_sans" />
                    </FrameLayout>

                    <!-- ===== BOTONES ===== -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_enviar"
                            style="@style/BotonPrincipal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Enviar" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_cancelar"
                            style="@style/BotonSecundario"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Cancelar" />
                    </LinearLayout>

                    <!-- Nota inferior -->
                    <TextView
                        android:id="@+id/tv_nota"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="* Recibirás un correo cuando la incidencia haya sido solucionada."
                        android:textColor="@color/negro"
                        android:textSize="11sp"
                        android:fontFamily="@font/rethink_sans" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- ===== MENÚ INFERIOR (reutilizable) ===== -->
    <include
        android:id="@+id/menu_inferior"
        layout="@layout/menu_navegacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>