<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <!-- Título principal -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PBIO - Sprint 1"
        android:textSize="34sp"
        android:textStyle="bold"
        android:textColor="@color/azul_profundo"
        android:fontFamily="@font/rethink_sans"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Texto de medidas -->
    <TextView
        android:id="@+id/tv_medidas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medidas del sensor"
        android:textSize="24sp"
        android:textColor="@color/negro"
        android:fontFamily="@font/rethink_sans"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Botón Iniciar Sesión -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginButton"
        style="@style/BotonPrincipal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesión"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/registerButton"
        app:layout_constraintTop_toBottomOf="@id/tv_medidas"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp" />

    <!-- Botón Registrarse -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/registerButton"
        style="@style/BotonPrincipal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Registrarse"
        app:layout_constraintStart_toEndOf="@id/loginButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_medidas"
        android:layout_marginTop="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp" />

    <!-- Botón Ir a Perfil -->

    <!-- Contenedor de estado -->
    <FrameLayout
        android:id="@+id/status_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintTop_toBottomOf="@+id/registerButton" />

    <!-- ========================================== -->
    <!-- MENÚ DE NAVEGACIÓN INFERIOR -->
    <!-- ========================================== -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bottom_nav_background"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="@dimen/padding_medio"
        android:paddingTop="12dp"
        android:paddingEnd="@dimen/padding_medio"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Ícono 1: INICIO -->
        <TextView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:clickable="true"
            android:contentDescription="Inicio"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="H"
            android:textColor="@color/blanco"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Ícono 2: MAPA -->
        <TextView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:clickable="true"
            android:contentDescription="Escanear"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="MP"
            android:textColor="@color/blanco"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Ícono 3: QR -->
        <TextView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:clickable="true"
            android:contentDescription="Historial"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="QR"
            android:textColor="@color/blanco"
            android:textSize="20sp" />

        <!-- Ícono 4: ALERTAS -->
        <TextView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:clickable="true"
            android:contentDescription="Alertas"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="!"
            android:textColor="@color/blanco"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Ícono 5: PERFIL -->
        <TextView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:clickable="true"
            android:contentDescription="Perfil"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="P"
            android:textColor="@color/blanco"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>