<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bottom_nav_background"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="@dimen/padding_medio"
        android:paddingTop="12dp"
        android:paddingEnd="@dimen/padding_medio"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Ícono 1: INICIO -->
        <TextView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_icon_background"
            android:clickable="true"
            android:contentDescription="Inicio"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="H"
            android:textColor="@color/blanco"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Ícono 2: MAPA -->
        <TextView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/circle_icon_background"
            android:clickable="true"
            android:contentDescription="Escanear"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="MP"
            android:textColor="@color/blanco"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Ícono 3: QR -->
        <TextView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/circle_icon_background"
            android:clickable="true"
            android:contentDescription="Historial"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="QR"
            android:textColor="@color/blanco"
            android:textSize="20sp" />

        <!-- Ícono 4: ALERTAS -->
        <TextView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/circle_icon_background"
            android:clickable="true"
            android:contentDescription="Alertas"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="!"
            android:textColor="@color/blanco"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Ícono 5: PERFIL -->
        <TextView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/circle_icon_background"
            android:clickable="true"
            android:contentDescription="Perfil"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="P"
            android:textColor="@color/blanco"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>